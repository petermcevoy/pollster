body.button {
	background-color:whiteSmoke;
	h1 {
		font-family:helvetica,verdana;
		color:#333;
		text-align:center;
		position:absolute;
		top:0;
		left:0;
		margin:0;
		background-color:white;
		padding:8px;
		opacity:0.7;
	}

a.vote_button {

	background-color:whiteSmoke;
	border:1px outset #333;
	display:block;
	width:400px;
	

	
	margin-left:auto;
	margin-right:auto;
	
	margin-bottom:20px;
	padding:40px;
	
	text-align:center;
	font-family:monospace;
	font-size:50px;
	text-decoration:none;
	color:white;
	text-shadow: #333 0px 0px 8px;
	
	&:hover {
		opacity: 0.8;
	}
	
	&:active {
		background-color: #ddd;
		border:1px inset #e5e5e5;
	}
	
	&.checked {
		background-image: url("<%= asset_path("check.png") %>")	!important;
		background-repeat: no-repeat				!important;
		background-position: bottom right 	!important;
	}

	&.a {background-color: #aaa; }
	&.b {background-color: #123456; }
	&.c {background-color: #81A18A; }
	&.d {background-color: #A19191; }
	
	&.a {background-image: -webkit-linear-gradient(top, rgba(170,170,170,0), rgba(170,170,170,0.5)); /*background-color: #aaa;*/ }
	&.b {background-image: -webkit-linear-gradient(top, rgba(18,52,86,0), rgba(18,52,86,0.5)); /*background-color: #123456;*/ }
	&.c {background-image: -webkit-linear-gradient(top, rgba(129,161,138,0), rgba(129,161,138,0.5)); /*background-color: #81A18A;*/ }
	&.d {background-image: -webkit-linear-gradient(top, rgba(161,145,145,0), rgba(161,145,145,0.5)); /*background-color: #A19191;*/ }
	
	&.a {background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgba(0,0,0,0)), color-stop(1, rgb(170,170,170)) ); /*background-color: #aaa;*/ }
	&.b {background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgba(0,0,0,0)), color-stop(1, rgb(18,52,86)) ); /*background-color: #123456;*/ }	
	&.c {background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgba(0,0,0,0)), color-stop(1, rgb(129,161,138)) ); /*background-color: #81A18A;*/ }	
	&.d {background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgba(0,0,0,0)), color-stop(1, rgb(161,145,145)) ); /*background-color: #A19191;*/ }	


}


}