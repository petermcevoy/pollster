body {
	margin:0;
	background-color:#eee;
	background-image: url('<%= asset_path("green-fibers.png") %>');
}
h1.logo {
	font-size:60px;
	font-family: 'Carter One', sans-serif;
	//padding:15px;
	color:#eee;
	text-align:center;
	margin-bottom:0px;
}
p.slogan {
	font-size:13px;
	font-family:Helvetica, Verdana;
	color:#eee;
	text-align:center;

}

div.container {
	padding-bottom:80px;
}

div.content {
	width:400px;
	padding:20px;
	background-color:#fff;
	margin-left:auto;
	margin-right:auto;
	
	margin-top:80px;	

	
	-moz-box-shadow: 		0px 0px 10px #000;
	-webkit-box-shadow: 0px 0px 10px #000;
	box-shadow: 				0px 0px 10px #000;
}

ul.title_data {
	list-style-type:none;
	padding-left:0;
	li {
		margin-bottom:8px;
		width:350px;
		text-align:right;
		span.title, label {
			float:left;
			font-weight:bold;
		}
	}
}
ul.title_data.small li {width:280px;}

form input[type=submit] {
	float:right;
}